{
  "manifest_version": 3,
  "name": "QuickTab",
  "version": "1.1",
  "description": "Search and switch between open tabs easily. Now with auto-open feature!",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-19.png",
      "48": "icons/icon-38.png",
      "128": "icons/icon-128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Open the QuickTab extension"
    }
  }
}
